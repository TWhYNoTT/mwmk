 @section Scripts{
    <partial name="_ValidationScriptsPartial"/>
   
    <script>
        var fillimg = function (event) { 
  
                var imgholder = document.getElementById("imgfile");
                imgholder.src = URL.createObjectURL(event.target.files[0])
        
        }
    </script>
}
