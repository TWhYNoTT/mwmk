@page
@model IndexModel
@{
    // ViewData["Title"] = "MProfile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
@section Styles {
    <link href="@Url.Content("~/css/css/profile.css")" rel="stylesheet" />

}



<section class="container-sign">

     <header>My Profile</header>
    <partial name="_StatusMessage" for="StatusMessage" />
    <form class="form" id="profile-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="input-box">
            <label asp-for="Username" class="form-label">Full Name</label>
            <input type="text" asp-for="Username" class="form-control" disabled />
        </div>

        <div class="input-box">
            <label asp-for="Useremail" class="form-label"></label>
            <input type="text" asp-for="Useremail" class="form-control" disabled />
        </div>

         <div class="input-box">
            <label asp-for="Input.Country" class="form-label"></label>
            <input type="text" asp-for="Input.Country" class="form-control" />
            <span asp-validation-for="Input.Country" class="text-danger"></span>
        </div>
        <div class="input-box">
            <label asp-for="Input.State" class="form-label"></label>
            <input type="text" asp-for="Input.State" class="form-control" />
            <span asp-validation-for="Input.State" class="text-danger"></span>
        </div>
        <div class="input-box">
            <label asp-for="Input.City" class="form-label"></label>
            <input type="text" asp-for="Input.City" class="form-control" />
            <span asp-validation-for="Input.City" class="text-danger"></span>
        </div>
        <div class="input-box">
            <label asp-for="Input.Address" class="form-label"></label>
            <input type="text"  asp-for="Input.Address" class="form-control" />
            <span asp-validation-for="Input.Address" class="text-danger"></span>
        </div>

            <div class="input-box">
                <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                <input type="text" asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
        <button type="submit" onclick="">update profile</button>
    </form>

</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />


}
